<div data-role="header" data-nobackbtn="true" id="page_title">
  <h1>Keep Your Fit</h1>
  <%= link_to "注册", register_path, :"data-transition" => "flip" %>
</div>

<div data-role="content">
  <%= form_for @user do |f| %>
    <div data-role="fieldcontain">
      <%= f.text_field :email, :placeholder => "邮箱" %>
    </div>
    <div data-role="fieldcontain">
      <%= f.password_field :password, :placeholder => "密码" %>
    </div>
    <div data-role="fieldcontain">
      <%= f.password_field :password_confirmation, :placeholder => "再次输入密码" %>
    </div>
    <fieldset class="ui-grid-a">
      <div class="ui-block-a"><%= f.submit %></div>
      <div class="ui-block-b"><button type="submit" data-theme="a" ></button></div>
    </fieldset>
  <% end %>
</div>

