<div data-role="header" data-nobackbtn="true" id="page_title">
  <h1>Keep Your Fit</h1>
  <%= link_to "注册", sign_up_path, :"data-transition" => "flip" %>
</div>

<div data-role="content">
  <%= form_tag sessions_path do %>
    <div data-role="fieldcontain">
      <%= text_field_tag :email, params[:email], :placeholder => "邮箱" %>
    </div>
    <div data-role="fieldcontain">
      <%= password_field_tag :password, params[:email], :placeholder => "密码" %>
    </div>
    <fieldset class="ui-grid-a">
      <div class="ui-block-a"><%= submit_tag "登录", :"data-theme" => "a" %></div>
      <div class="ui-block-b"><button type="reset" data-theme="a" >重置</button></div>
    </fieldset>
  <% end %>
</div>